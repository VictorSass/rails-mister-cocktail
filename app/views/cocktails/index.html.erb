<div class="banner_main">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "cocktail-banner.jpg" %>);">
    <div class="banner-content">
      <h1>Cocktails</h1>
      <p>Discover authentic flavours</p>
    </div>
  </div>
</div>

<div class="container-cards">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-1">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.picture, height: 400, width: 400, crop: :fill %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
